<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:id="@+id/item"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:id="@+id/buton_img"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="5dp"
            android:src="@drawable/tour_bus"
            android:elevation="8dp"/>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/buton_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/buton_img"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_marginTop="2dp"
            android:gravity="center|top"
            android:text="Tourism"
            android:fontFamily="@font/domine"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout><!--    </androidx.cardview.widget.CardView>-->

