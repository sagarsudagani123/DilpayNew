<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UPI_payments_screen">

    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/purple_700">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="7dp"
            android:src="@drawable/ic_baseline_chevron_left_24" />

        <TextView
            android:id="@+id/provider_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="25dp"
            android:transitionName="trans1"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/provider_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="25dp"
            android:transitionName="trans2"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/provider_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="25dp"
            android:transitionName="trans3"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/provider_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="25dp"
            android:transitionName="trans4"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/re1"
        app:cardCornerRadius="6dp"
        android:id="@+id/card1"
        android:elevation="6dp"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Account Details"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="50dp"
            android:id="@+id/from"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:layout_below="@id/card1"
    android:id="@+id/li1"
    android:orientation="vertical">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/e_bank"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Select Bank"
        android:layout_marginStart="15dp"

        android:layout_marginEnd="15dp"
        app:boxStrokeColor="@color/teal_200">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:imeOptions="actionDone" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin1"
        android:padding="8dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/e_bank"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:id="@+id/airtel"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/andhra1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/andhra"
            android:text="Andhra Bank"
            android:transitionName="trans1"
            android:textColor="#000"
            android:layout_marginStart="30dp"
            android:textSize="14sp"
            android:layout_marginTop="6dp" />
    </LinearLayout>


    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"
        android:layout_below="@id/lin1"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin2"
        android:padding="8dp"
        android:layout_below="@id/v1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:id="@+id/dish"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/sbi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sbi"
            android:text="State Bank Of India"
            android:transitionName="trans2"
            android:textColor="#000"
            android:layout_marginStart="30dp"
            android:textSize="14sp"
            android:layout_marginTop="6dp" />
    </LinearLayout>

    <View
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"
        android:layout_below="@id/lin2"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin3"
        android:padding="8dp"
        android:layout_below="@id/v2"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:id="@+id/tata"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/icici" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icici"
            android:text="ICICI Bank"
            android:textColor="#000"
            android:transitionName="trans3"
            android:layout_marginStart="30dp"
            android:textSize="14sp"
            android:layout_marginTop="6dp" />
    </LinearLayout>

    <View
        android:id="@+id/v3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"
        android:layout_below="@id/lin3"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin4"
        android:padding="8dp"
        android:layout_below="@id/v3"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:id="@+id/sun"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/axis" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/axis"
            android:text="Axis Bank"
            android:textColor="#000"
            android:transitionName="trans4"
            android:layout_marginStart="30dp"
            android:textSize="14sp"
            android:layout_marginTop="6dp" />
    </LinearLayout>

    <View
        android:id="@+id/v4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"
        android:layout_below="@id/lin4"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin5"
        android:padding="8dp"
        android:layout_below="@id/v4"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="35dp"
        android:id="@+id/d2h"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/union" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/union"
        android:text="Union Bank"
        android:textColor="#000"
        android:transitionName="trans5"
        android:layout_marginStart="30dp"
        android:textSize="14sp"
        android:layout_marginTop="6dp" />
    </LinearLayout>
</LinearLayout>
</RelativeLayout>