<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".electricity.Electricity">
    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/gradientEnd">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="7dp"
            android:src="@drawable/ic_baseline_chevron_left_24" />

        <TextView
            android:id="@+id/te1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="25dp"
            android:text="Electricity"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/e_provider"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Enter Provider Name"
        android:layout_marginStart="15dp"
        android:layout_below="@id/re1"
        android:layout_marginEnd="15dp"
        app:boxStrokeColor="@color/teal_200"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:imeOptions="actionDone"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Providers"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/all"
        android:layout_margin="15dp"
        android:textColor="#000"
        android:layout_below="@id/e_provider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear1"
        android:padding="8dp"
        android:layout_below="@id/all"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="35dp"
            android:id="@+id/tsspdcl"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/tsspdcl"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tsspdcl1"
            android:transitionName="trans1"
            android:text="Southern power distribution company of telangana limited"
            android:textColor="#000"
            android:layout_marginStart="30dp"
            android:textSize="14sp"
            />
    </LinearLayout>
    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"
        android:layout_below="@id/linear1"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="3dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear2"
        android:padding="8dp"
        android:layout_below="@id/v1"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="35dp"
            android:id="@+id/tsnpdcl"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/tsnpdcl"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tsnpdcl1"
            android:text="Southern power distribution company of telangana limited"
            android:textColor="#000"
            android:transitionName="trans2"
            android:layout_marginStart="30dp"
            android:textSize="14sp"
            />
    </LinearLayout>
</RelativeLayout>