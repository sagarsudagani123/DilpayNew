<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".payment.paymentStart">

    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/gradientEnd">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="7dp"
            android:src="@drawable/ic_baseline_chevron_left_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="25dp"
            android:text="Status"
            android:fontFamily="@font/righteous_regular"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/li1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/success1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:src="@drawable/ic_baseline_check_circle_outline_24"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/failure"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/success1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:src="@drawable/ic_baseline_cancel_24"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/pending"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/success1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:src="@drawable/pending" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/li1"
            android:layout_centerHorizontal="true"
            android:text=" "
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/detailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txMessage"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/orderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:text="Order Id"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/orderId1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/orderId"
                android:layout_marginStart="15dp"
                android:layout_marginTop="4dp"
                android:text=""
                android:textColor="#2196F3" />

            <TextView
                android:id="@+id/paymentMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/orderId1"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="Payment Mode"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/paymentMode1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/paymentMode"
                android:layout_marginStart="15dp"
                android:layout_marginTop="4dp"
                android:text=""
                android:textColor="#2196F3" />

            <TextView
                android:id="@+id/txTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/paymentMode1"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:text="Transaction Time"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txTime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txTime"
                android:layout_marginStart="15dp"
                android:layout_marginTop="4dp"
                android:text=""
                android:textColor="#2196F3" />

            <TextView
                android:id="@+id/refId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txTime1"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:text="Referrance Id"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/refId1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/refId"
                android:layout_marginStart="15dp"
                android:layout_marginTop="4dp"
                android:text=""
                android:textColor="#2196F3" />

            <TextView
                android:id="@+id/orderAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/refId1"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:text="Order Amount"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/orderAmount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/orderAmount"
                android:layout_marginStart="15dp"
                android:layout_marginTop="4dp"
                android:text=""
                android:textColor="#2196F3" />
        </LinearLayout>

        <TextView
            android:id="@+id/txStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailsLayout"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="Transaction Status"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txStatus1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txStatus"
            android:layout_marginStart="15dp"
            android:layout_marginTop="4dp"
            android:text=""
            android:textColor="#2196F3" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B7000000"
        android:visibility="visible">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>


</RelativeLayout>