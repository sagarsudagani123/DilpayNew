<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".gas.Gas">
    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/purple_700">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="7dp"
            android:src="@drawable/ic_baseline_chevron_left_24" />
        <TextView
            android:id="@+id/te1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="25dp"
            android:text="Select Gas Provider"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Providers"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/all"
        android:layout_margin="15dp"
        android:textColor="#000"
        android:layout_below="@id/re1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin1"
        android:padding="8dp"
        android:layout_below="@id/all"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="35dp"
            android:id="@+id/hp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/hp_gas"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hp1"
            android:text="HP Gas"
            android:textColor="#000"
            android:transitionName="tran1"
            android:layout_marginStart="30dp"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            />
    </LinearLayout>


    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"
        android:layout_below="@id/lin1"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="3dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin2"
        android:padding="8dp"
        android:layout_below="@id/v1"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="35dp"
            android:id="@+id/bharat"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/bharat_gas"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bharat1"
            android:text="Bharat Gas"
            android:transitionName="tran2"
            android:textColor="#000"
            android:layout_marginStart="30dp"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            />
    </LinearLayout>
    <View
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"
        android:layout_below="@id/lin2"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="3dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin3"
        android:padding="8dp"
        android:layout_below="@id/v2"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:id="@+id/indian"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/indian_gas"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/indian1"
            android:text="Indane Gas"
            android:textColor="#000"
            android:transitionName="tran3"
            android:layout_marginStart="30dp"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            />
    </LinearLayout>



</RelativeLayout>