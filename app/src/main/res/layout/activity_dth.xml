<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dth.Dth">
    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/purple_700">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="7dp"
            android:src="@drawable/ic_baseline_chevron_left_24" />

        <TextView
            android:id="@+id/te1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="25dp"
            android:text="Select DTH Provider"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>
 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="All Providers"
     android:textSize="16sp"
     android:textStyle="bold"
     android:id="@+id/all"
     android:layout_margin="15dp"
     android:textColor="#000"
     android:layout_below="@id/re1"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lin1"
    android:padding="8dp"
    android:layout_below="@id/all"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="35dp"
        android:id="@+id/airtel"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/airtel"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/airtel1"
        android:text="Airtel Tv"
        android:transitionName="trans1"
        android:textColor="#000"
        android:layout_marginStart="30dp"
        android:textSize="14sp"
        android:layout_marginTop="6dp"
       />
</LinearLayout>


    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"
        android:layout_below="@id/lin1"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="3dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin2"
        android:padding="8dp"
        android:layout_below="@id/v1"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="35dp"
        android:id="@+id/dish"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/dishtv"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dish1"
        android:text="Dish Tv"
        android:transitionName="trans2"
        android:textColor="#000"
        android:layout_marginStart="30dp"
        android:textSize="14sp"
        android:layout_marginTop="6dp"
      />
    </LinearLayout>
    <View
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"
        android:layout_below="@id/lin2"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="3dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin3"
        android:padding="8dp"
        android:layout_below="@id/v2"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="35dp"
        android:id="@+id/tata"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/tata2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tata1"
        android:text="Tata Sky"
        android:textColor="#000"
        android:transitionName="trans3"
        android:layout_marginStart="30dp"
        android:textSize="14sp"
        android:layout_marginTop="6dp"
        />
    </LinearLayout>
    <View
        android:id="@+id/v3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"
        android:layout_below="@id/lin3"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="3dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin4"
        android:padding="8dp"
        android:layout_below="@id/v3"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="35dp"
        android:id="@+id/sun"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/sundirect"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sun1"
        android:text="Sun Direct"
        android:textColor="#000"
        android:transitionName="trans4"
        android:layout_marginStart="30dp"
        android:textSize="14sp"
        android:layout_marginTop="6dp"
       />
    </LinearLayout>
    <View
        android:id="@+id/v4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"
        android:layout_below="@id/lin4"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="3dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin5"
        android:padding="8dp"
        android:layout_below="@id/v4"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="35dp"
        android:id="@+id/d2h"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/d2h"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/d2h1"
        android:text="D2H"
        android:textColor="#000"
        android:transitionName="trans5"
        android:layout_marginStart="30dp"
        android:textSize="14sp"
        android:layout_marginTop="6dp"
       />

    </LinearLayout>
</RelativeLayout>