<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".payment.paymentStart"
    android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/gradientEnd">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="7dp"
            android:src="@drawable/ic_baseline_chevron_left_24" />

        <TextView
            android:id="@+id/te1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="25dp"
            android:text="Status"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/re1"
        android:orientation="vertical"
        android:id="@+id/li1">

        <ImageView
            android:id="@+id/success1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_baseline_check_circle_outline_24" />

        <ImageView
            android:id="@+id/failure"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/success1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_baseline_cancel_24"
            android:visibility="gone" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/li1"
        android:id="@+id/txMessage"
        android:layout_centerHorizontal="true"
        android:text="Transaction Message"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Id"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:id="@+id/orderId"
        android:layout_marginStart="15dp"
        android:layout_below="@id/txMessage"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderId"
        android:layout_marginTop="4dp"
        android:textColor="#2196F3"
        android:layout_marginStart="15dp"
        android:id="@+id/orderId1"
        android:text="123456"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/paymentMode"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_below="@id/orderId1"
        android:text="Payment Mode"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/paymentMode"
        android:layout_marginTop="4dp"
        android:layout_marginStart="15dp"
        android:id="@+id/paymentMode1"
        android:textColor="#2196F3"
        android:text="123456"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:id="@+id/txTime"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_below="@id/paymentMode1"
        android:text="Transaction Time"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txTime"
        android:layout_marginTop="4dp"
        android:layout_marginStart="15dp"
        android:textColor="#2196F3"
        android:id="@+id/txTime1"
        android:text="123456"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:id="@+id/refId"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_below="@id/txTime1"
        android:text="Referrance Id"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/refId"
        android:layout_marginTop="4dp"
        android:layout_marginStart="15dp"
        android:textColor="#2196F3"
        android:id="@+id/refId1"
        android:text="123456"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:id="@+id/orderAmount"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_below="@id/refId1"
        android:text="Order Amount"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderAmount"
        android:layout_marginTop="4dp"
        android:layout_marginStart="15dp"
        android:textColor="#2196F3"
        android:id="@+id/orderAmount1"
        android:text="123456"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:id="@+id/txStatus"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_below="@id/orderAmount1"
        android:text="Transaction Status"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txStatus"
        android:layout_marginTop="4dp"
        android:layout_marginStart="15dp"
        android:textColor="#2196F3"
        android:id="@+id/txStatus1"
        android:text="123456"/>



</RelativeLayout>