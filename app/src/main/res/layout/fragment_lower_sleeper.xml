<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bus.Lower_sleeper">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/li2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:text="available" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/available_seat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:text="Select" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/seat_select" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:text="Booked" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/seat_booked" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/re2">
                <ImageView
                    android:id="@+id/steering"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="140dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/bus_steering" />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:id="@+id/sleeper_seat1"
                    android:layout_below="@id/steering"
                    android:src="@drawable/sleeper_seat"
                    />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/sleeper_seat1"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/steering"
                    android:id="@+id/sleeper_seat2"
                    android:src="@drawable/sleeper_seat"
                    />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/sleeper_seat2"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/steering"
                    android:id="@+id/sleeper_seat3"
                    android:src="@drawable/sleeper_seat"
                    />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:id="@+id/sleeper_seat4"
                    android:layout_below="@id/sleeper_seat1"
                    android:src="@drawable/sleeper_seat"
                    />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/sleeper_seat1"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/sleeper_seat2"
                    android:id="@+id/sleeper_seat5"
                    android:src="@drawable/sleeper_seat"
                    />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/sleeper_seat2"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/sleeper_seat3"
                    android:id="@+id/sleeper_seat6"
                    android:src="@drawable/sleeper_seat"
                    />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:id="@+id/sleeper_seat7"
                    android:layout_below="@id/sleeper_seat4"
                    android:src="@drawable/sleeper_seat"
                    />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/sleeper_seat1"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/sleeper_seat5"
                    android:id="@+id/sleeper_seat8"
                    android:src="@drawable/sleeper_seat"
                    />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/sleeper_seat2"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/sleeper_seat6"
                    android:id="@+id/sleeper_seat9"
                    android:src="@drawable/sleeper_seat"
                    />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:id="@+id/sleeper_seat10"
                    android:layout_below="@id/sleeper_seat7"
                    android:src="@drawable/sleeper_seat"
                    />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/sleeper_seat1"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/sleeper_seat8"
                    android:id="@+id/sleeper_seat11"
                    android:src="@drawable/sleeper_seat"
                    />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/sleeper_seat2"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/sleeper_seat9"
                    android:id="@+id/sleeper_seat12"
                    android:src="@drawable/sleeper_seat"
                    />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:id="@+id/sleeper_seat13"
                    android:layout_below="@id/sleeper_seat10"
                    android:src="@drawable/sleeper_seat"
                    />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/sleeper_seat1"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/sleeper_seat11"
                    android:id="@+id/sleeper_seat14"
                    android:src="@drawable/sleeper_seat"
                    />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/sleeper_seat2"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/sleeper_seat12"
                    android:id="@+id/sleeper_seat15"
                    android:src="@drawable/sleeper_seat"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/seat_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:text="Selected seats:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/seat_num1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/seat_num"
                    android:text="2,"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/seat_num2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/seat_num1"
                    android:text="2,"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/seat_num3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/seat_num2"
                    android:text="2,"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/seat_num4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/seat_num3"
                    android:text="2,"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/seat_num5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/seat_num4"
                    android:text="2,"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/seat_num6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/seat_num5"
                    android:text="2"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/seat_num"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:text="Amount : "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/amount1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/seat_num1"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/amount"
                    android:text="500"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/proceed"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/amount"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_bg"
                    android:text="Done"
                    android:textColor="#fff" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>