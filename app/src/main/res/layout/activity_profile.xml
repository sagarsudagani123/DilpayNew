<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/gradientEnd"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_chevron_left_24" />

        <TextView
            android:id="@+id/customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="Sagar"
            android:paddingTop="20dp"
            android:layout_marginStart="15dp"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/customer_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234567890"
            android:layout_marginStart="15dp"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/employee_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:layout_marginStart="10dp"
            android:textColor="#fff" />

    </LinearLayout>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/customer_profilepic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="80dp"
        android:layout_alignParentEnd="true"
        android:scaleType="fitCenter"
        android:src="@drawable/person"
        android:layout_marginEnd="25dp"
        android:elevation="2dp"
        app:civ_border_color="#fff"
        app:civ_border_width="2dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin1"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:layout_below="@id/customer_profilepic"
        >
        <ImageView
            android:layout_width="30dp"
            android:id="@+id/airtel"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/member"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/airtel1"
            android:layout_toRightOf="@id/airtel"
            android:text="Membership"
            android:textStyle="bold"
            android:transitionName="trans1"
            android:textColor="#000"
            android:layout_marginStart="30dp"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/selectDrop"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:background="@drawable/button_bg"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:text="Upgrade"
            android:textColor="@color/gradientStart"
            android:textStyle="bold" />
    </RelativeLayout>


    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"
        android:layout_below="@id/lin1"
        android:layout_marginTop="8dp"

        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="3dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin2"
        android:padding="10dp"
        android:layout_below="@id/v1"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="35dp"
            android:id="@+id/dish"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/bhim"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dish1"
            android:text="My Bhim UPI Id"
            android:textStyle="bold"
            android:transitionName="trans2"
            android:textColor="#000"
            android:layout_marginStart="30dp"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            />
    </LinearLayout>
    <View
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"
        android:layout_below="@id/lin2"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="3dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin3"
        android:padding="10dp"
        android:layout_below="@id/v2"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:id="@+id/bookings_img"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/bookings"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bookings"
            android:text="My Bookings"
            android:textStyle="bold"
            android:textColor="#000"
            android:transitionName="trans3"
            android:layout_marginStart="30dp"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            />
    </LinearLayout>
    <View
        android:id="@+id/v3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"
        android:layout_below="@id/lin3"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="3dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin4"
        android:padding="10dp"
        android:layout_below="@id/v3"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:id="@+id/tata"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_baseline_location_on_24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tata1"
            android:text="My Address"
            android:textStyle="bold"
            android:textColor="#000"
            android:transitionName="trans3"
            android:layout_marginStart="30dp"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            />
    </LinearLayout>
    <View
        android:id="@+id/v4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"
        android:layout_below="@id/lin4"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="3dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin5"
        android:padding="10dp"
        android:layout_below="@id/v4"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:id="@+id/wallet"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/wallet"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wallet1"
            android:text="My Wallet"
            android:textStyle="bold"
            android:textColor="#000"
            android:transitionName="trans3"
            android:layout_marginStart="30dp"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            />
    </LinearLayout>
    <View
        android:id="@+id/v5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"
        android:layout_below="@id/lin5"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="3dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin6"
        android:padding="10dp"
        android:layout_below="@id/v5"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:id="@+id/commission"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/commission1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/commission1"
            android:text="My Commission"
            android:textStyle="bold"
            android:textColor="#000"
            android:transitionName="trans3"
            android:layout_marginStart="30dp"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btmll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/gradientEnd"
        android:orientation="horizontal">

